<idea-plugin>
	<id>consulo.nodejs</id>
	<name>Node.js</name>
	<version>SNAPSHOT</version>
	<vendor>Must-Be.org</vendor>
	<category>Web Frameworks</category>
	<depends>consulo.javascript</depends>

	<extensions defaultExtensionNs="com.intellij">
		<sdkType implementation="org.mustbe.consulo.nodejs.bundle.NodeJSBundleType"/>
		<moduleExtensionProvider name="NodeJS"
								 key="nodejs"
								 icon="/icons/nodejs.png"
								 immutableClass="org.mustbe.consulo.nodejs.module.extension.NodeJSModuleExtension"
								 mutableClass="org.mustbe.consulo.nodejs.module.extension.NodeJSMutableModuleExtension"/>
		<programRunner implementation="org.mustbe.consulo.nodejs.run.NodeJSDebuggerRunner"/>
		<configurationType implementation="org.mustbe.consulo.nodejs.run.NodeJSConfigurationType"/>
		<runConfigurationProducer implementation="org.mustbe.consulo.nodejs.run.NodeJSConfigurationProducer"/>

		<editorNotificationProvider implementation="org.mustbe.consulo.nodejs.packages.PackageEditorNotificationProvider"/>

		<fileTypeDetector implementation="org.mustbe.consulo.nodejs.lang.NodeJSFileTypeDetector" />

		<newModuleBuilder implementation="org.mustbe.consulo.nodejs.newProjectOrModule.NodeJSNewModuleBuilder" />
	</extensions>

	<extensions defaultExtensionNs="consulo.javascript">
		<jomFileDescriptor implementation="org.mustbe.consulo.nodejs.packages.jom.PackagesFileDescriptor"/>
	</extensions>
</idea-plugin>